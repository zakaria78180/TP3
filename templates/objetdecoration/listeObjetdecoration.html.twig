{% extends 'base.html.twig' %}

{% block title %}Liste des Objets Décoratifs{% endblock %}

{% block body %}
  <div class="container">
    <h1 class="pt-2 text-center">Liste des Objets Décoratifs</h1>

    {% if LesObjetsDeco is not empty %}
      <div class="row">
        {% for objet in LesObjetsDeco %}
          <div class="col-md-4 mb-4">
            <a href="{{ path('app_fiche_objetdecoration', {'id': objet.id }) }}" class="card-link">
              <div class="card">
                <div class="card-img-wrapper">
                    {% if objet.imageFilename %}
                        <img src="{{ asset('uploads/images/' ~ objet.imageFilename) }}" class="card-img-top" alt="Image de {{ objet.nom }}">
                    {% else %}
                        <img src="{{ asset('path/to/default/image.jpg') }}" class="card-img-top" alt="Image de {{ objet.nom }}">
                    {% endif %}
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{ objet.nom }}</h5>
                    <p class="card-text">{{ objet.description }}</p>
                    <p class="card-text"><strong>Prix :</strong> {{ objet.prix }} €</p>
                </div>
              </div>
            </a>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p>Aucun objet décoratif trouvé.</p>
    {% endif %}
  </div>
{% endblock %}

{% block stylesheets %}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJ1mR7gXQm7g66j6kR3J1ji7b+HkBqAqPTr9W1o8Dk5h7YdBxF1EbwFcbjop" crossorigin="anonymous">
  <style>
    .card {
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      transition: box-shadow 0.3s ease-in-out;
    }
    .card:hover {
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }
    .card-img-top {
      border-radius: 10px 10px 0 0;
      max-height: 200px;
      object-fit: cover;
    }
    .card-img-wrapper::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      opacity: 0;
      transition: opacity 0.3s ease-in-out;
    }
    .card-img-wrapper:hover::after {
      opacity: 1;
    }
    .card-body {
      text-align: center;
    }
    .card-title {
      font-size: 1.2rem;
      font-weight: bold;
    }
    .container {
      margin-top: 50px;
    }
    .text-center {
      text-align: center;
    }
    .card-link {
      text-decoration: none;
      color: inherit;
    }
  </style>
{% endblock %}