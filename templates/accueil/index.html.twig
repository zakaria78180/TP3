{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}


{% block body %}

    <div class="jumbotron">
        <br><h1 class="display-2 mt-4"> Kaline Creation </h1>
            <p class="lead">Fabrication artisanale avec des matériaux naturels et recyclés.</p>
        <hr class="my-4">
        <p> Découvrez nos créations uniques, alliant savoir-faire traditionnel et design contemporain.</p>

    </div> 
   

  <div class="container">

   
      <div class="row">
        {% for Article in listeAll %}
          <div class="col-md-4 mb-4 d-flex align-items-stretch">
            <a href="{{ path('ficheBougie', {'id': Article.id }) }}" class="card-link w-100">
              <div class="card h-100">
                <div class="card-img-wrapper">
                  <img class="card-img-top" src="{{ asset('uploads/images/' ~ Article.imageFileName|replace({'http://': '', 'https://': ''})) }}" alt="Card image">
                </div>
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title">{{ Article.nom }}</h5>
                  <p class="card-text"><strong>Prix :</strong> {{ Article.prix }} €</p>
                </div>
              </div>
            </a>
          </div>
        {% endfor %}
      </div>

     
   
  </div> 
{% endblock %}

{% block stylesheets %}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJ1mR7gXQm7g66j6kR3J1ji7b+HkBqAqPTr9W1o8Dk5h7YdBxF1EbwFcbjop" crossorigin="anonymous">
  <style>
    .card {
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      transition: box-shadow 0.3s ease-in-out;
    }
    .card:hover {
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }
    .card-img-top {
      border-radius: 10px 10px 0 0;
      max-height: 200px;
      object-fit: cover;
    }
    .card-img-wrapper {
      position: relative;
      overflow: hidden;
      border-radius: 10px 10px 0 0;
    }
    .card-img-wrapper::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      opacity: 0;
      transition: opacity 0.3s ease-in-out;
    }
    .card:hover .card-img-wrapper::after {
      opacity: 1;
    }
    .card-body {
      flex: 1;
      text-align: center;
    }
    .card-title {
      font-size: 1.2rem;
      font-weight: bold;
    }
    .container {
      margin-top: 50px;
    }
    .text-center {
      text-align: center;
    }
    .card-link {
      text-decoration: none;
      color: inherit;
    }
    .btn-outline-warning:hover {
      color: #fff;
      background-color:rgb(133, 107, 31);
      border-color:rgb(126, 115, 83);
    }
  </style>

{% endblock %}
  